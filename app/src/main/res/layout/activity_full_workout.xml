<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FullWorkout"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/a1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/spiderman"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/a2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/a1"
            android:layout_marginTop="8dp"
            android:background="@drawable/bridge"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/a3"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/a2"
            android:layout_marginTop="8dp"
            android:background="@drawable/highstep"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/a4"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/a3"
            android:layout_marginTop="8dp"
            android:background="@drawable/inclinepushup"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/a5"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/a4"
            android:layout_marginTop="8dp"
            android:background="@drawable/leftlunge"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/a6"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/a5"
            android:layout_marginTop="8dp"
            android:background="@drawable/wallsit"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/a7"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/a6"
            android:layout_marginTop="8dp"
            android:background="@drawable/jumpingjacks"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/a8"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/a7"
            android:layout_marginTop="8dp"
            android:background="@drawable/longarmcrunches"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/a9"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/a8"
            android:layout_marginTop="8dp"
            android:background="@drawable/pushup"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>

</ScrollView>
